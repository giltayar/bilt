    "test:mocha": "npm run mocha",
    "test:eslint": "eslint --max-warnings=0 '**/*.js'",
    "test:typescript": "tsc --noEmit --emitDeclarationOnly false",
    "mocha": "mocha --no-timeouts --exit 'test/**/*.test.js'"
