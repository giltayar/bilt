{
  "name": "@bilt/npm-packages",
  "version": "2.0.1",
  "description": "",
  "type": "module",
  "main": "lib/src/npm-packages.js",
  "export": "./lib/src/npm-packages.js",
  "types": "types/src/npm-packages.d.ts",
  "engines": {
    "node": ">=12.3.0"
  },
  "files": [
    "types",
    "src"
  ],
  "scripts": {
    "build": "concurrently -r 'npm:build:*'",
    "build:typescript": "rm -rf types && tsc && cp src/*.d.ts types/src",
    "test": "concurrently -r 'npm:test:*'",
    "test:mocha": "npm run mocha",
    "test:eslint": "eslint --max-warnings=0 '**/*.js'",
    "test:typescript": "tsc --noEmit --emitDeclarationOnly false",
    "mocha": "mocha --no-timeouts --exit 'test/**/*.test.js'"
  },
  "keywords": [
    "ci",
    "build",
    "bilt",
    "tool",
    "monorepo"
  ],
  "author": "Gil Tayar <gil@tayar.org>",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/giltayar/bilt",
    "type": "git",
    "directory": "packages/npm-packages"
  },
  "dependencies": {
    "@bilt/artifact-finder": "^3.0.0",
    "@bilt/types": "^3.0.0",
    "debug": "^4.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.12.16",
    "@babel/eslint-parser": "^7.12.16",
    "@babel/plugin-syntax-top-level-await": "^7.12.13",
    "@bilt/git-testkit": "^2.0.0",
    "@types/chai": "^4.2.15",
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.14.27",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "chai": "^4.3.0",
    "concurrently": "^5.3.0",
    "eslint": "^7.19.0",
    "eslint-plugin-mocha-no-only": "^1.1.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "mocha": "^8.3.0",
    "prettier": "^2.2.1",
    "typescript": "^4.1.5"
  }
}
